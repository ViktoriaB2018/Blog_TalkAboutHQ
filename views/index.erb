<h2>Latest posts:</h2>
<br>
<% @posts.each do |post| %>
	<b style="font-size: 150%"><%= post.title %></b>
	<br>
	<br>
	<p><%= post.content %></p>
	<br>
	<p style="font-size: 85%"> Author: <%= post.author %></p>
	<p style="font-size: 75%"> Created at: <%= post.created_at %></p>
	<a href="/details/<%= post.id %>">Comments</a>
	<hr>
<% end %>